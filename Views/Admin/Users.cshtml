@model IEnumerable<Auctions.Models.Database.User>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="text-center">
    @if(TempData["action"] != null) {
        <div class="alert alert-danger alert-dissmisible" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            @TempData["action"].ToString()
        </div>
    }
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Tokens</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model) {
            <tr>
                <td>@user.first_name</td>
                <td>@user.last_name</td>
                <td>@user.gender</td>
                <td>@user.tokens</td>
                <td>
                    <button type="button" class="btn btn-danger">
                        <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" class="text-white">Delete</a>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
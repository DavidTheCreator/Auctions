@model Auctions.Models.View.CreateEditAuctionModel

@{
    ViewData["Title"] = "Create Auction";
}


<h1>Create Auction</h1>

<div class="row">
    <div class="col-xl-4">
        <form asp-controller="User" asp-action="CreateAuction" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control"/>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <textarea asp-for="description" class="form-control"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="image" class="control-label"></label>
                <input asp-for="image" class="form-control"/>
                <span asp-validation-for="image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="starting_price" class="control-label"></label>
                <input asp-for="starting_price" class="form-control"/>
                <span asp-validation-for="starting_price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="opens_at" class="control-label"></label>
                <input asp-for="opens_at" class="form-control"/>
                <span asp-validation-for="opens_at" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="opens_at_time" class="control-label"></label>
                <input asp-for="opens_at_time" class="form-control"/>
                <span asp-validation-for="opens_at_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="closes_at" class="control-label"></label>
                <input asp-for="closes_at" class="form-control"/>
                <span asp-validation-for="closes_at" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="closes_at_time" class="control-label"></label>
                <input asp-for="closes_at_time" class="form-control"/>
                <span asp-validation-for="closes_at_time" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-success" value="Create"/>
        </form>
    </div>
</div>